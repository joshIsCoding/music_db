<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <%if logged_in? %>
        <%= button_to "Logout", session_url, method: "delete" %>
    <% else %>
        <%= button_to "Login", new_session_url, method: "get" %>
    <% end %>
  </header>
  <body>
    <%= yield %>
  </body>

  <footer>
  <%= yield :footer %>
  </footer>
</html>
